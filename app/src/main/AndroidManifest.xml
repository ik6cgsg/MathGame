<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mathhelper.games.matify">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".Matify"
        android:resizeableActivity="true"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppDarkTheme">
        <activity android:name="mathhelper.games.matify.activities.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="mathhelper.games.matify.activities.GamesActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="mathhelper.games.matify.activities.SearchActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="mathhelper.games.matify.activities.LevelsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="mathhelper.games.matify.activities.AccountActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity android:name="mathhelper.games.matify.activities.AuthActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity android:name="mathhelper.games.matify.activities.PlayActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="mathhelper.games.matify.tutorial.TutorialPlayActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="mathhelper.games.matify.tutorial.TutorialGamesActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="mathhelper.games.matify.tutorial.TutorialLevelsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="mathhelper.games.matify.activities.SettingsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="mathhelper.games.matify.activities.SignUpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity android:name="mathhelper.games.matify.activities.PasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
        </activity>
    </application>

</manifest>